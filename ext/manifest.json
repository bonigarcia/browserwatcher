{
    "description": "Cross Browser Watcher",
    "manifest_version": 2,
    "name": "cbwatcher",
    "version": "1.0.0",
    "homepage_url": "https://github.com/bonigarcia/cbwatcher",
    "icons": {
        "80": "icons/cbwatcher-logo.png"
    },
    "permissions": [
        "storage", "tabCapture", "tabs", "activeTab", "downloads", "downloads.shelf"
    ],
    "options_ui": {
        "page": "options.html"
    },
    "content_security_policy": "script-src 'self' 'unsafe-eval' 'unsafe-inline'; object-src 'self'",
    "background": {
        "scripts": ["lib/ponyfill.min.js", "lib/StreamSaver.min.js", "background.js"],
        "persistent": false
    },
    "browser_action": {
       "default_icon": "icons/cbwatcher-logo.png"
    },
    "web_accessible_resources": [
       "icons/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "run_at": "document_start",
            "js": [
                "cbwatcher.js"
            ]
        }
    ],
    "commands": {
      "start": {
          "suggested_key": {
            "default": "Alt+R",
            "mac": "Alt+R"
          },
          "description": "Start recording"
      },
      "stop": {
          "suggested_key": {
            "default": "Alt+W",
            "mac": "Alt+W"
          },
          "description": "Stop recording"
      }
   }
}
