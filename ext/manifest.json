{
    "description": "Cross Browser Watcher",
    "manifest_version": 2,
    "name": "cbwatcher",
    "version": "1.0.0",
    "homepage_url": "https://github.com/bonigarcia/cbwatcher",
    "icons": {
        "80": "icons/cbwatcher-logo.png"
    },
    "permissions": [
        "storage"
    ],
    "options_ui": {
        "page": "options.html"
    },
    "content_security_policy": "script-src 'unsafe-inline'; object-src 'self'",
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "run_at": "document_start",
            "js": [
                "cbwatcher.js"
            ]
        }
    ]
}
